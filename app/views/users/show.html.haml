%h2 #{@user.name}
.row
  .col-sm-4
    .panel.panel-default
      .panel-heading
        %h3.panel-title All Total Events Bill Amount
      .panel-body
        = @total_bill
    .panel.panel-primary
      .panel-heading
        %h3.panel-title This months total bill
      .panel-body
        = @current_bill
  .col-sm-4
    .panel.panel-success
      .panel-heading
        %h3.panel-title Paid By You
      .panel-body
        = @user_paid
    .panel.panel-info
      .panel-heading
        %h3.panel-title This month you paid bill
      .panel-body
        =  @current_paid_bill
- if @info.present?
  %h3
    - j = 0
    - @info.each do |i|
      %p
        - if i.keys[j] == :to
          = "Pay to #{i[:to]} amount #{i[:amount]}"
        - else
          = "#{i[:by]} will pay you #{i[:amount]}"
        - j += j

