= link_to "Back", root_path, :class => "btn btn-lg btn-info"
%h2 Users List
.row
  .col-md-12
    %table.table
      %thead
        %tr
          %th #
          %th Name
          %th Total
          %th Paid
          %th Details
      %tbody
        - i = 0
        - @users.each do |user|
          %tr
            %td #{i += 1}
            %td
              = link_to "#{user.name}", user_path(user)
            %td
              = user.current_month_total_bill
            %td
              = user.current_month_paid_total
            %td
              = user.pay_json.join(', ') if user.pay_json.present?
